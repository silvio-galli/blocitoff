<div class="row">
  <div class="col-md-6">
    <%= form_for @task do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Give a \"name\" to your task ;-)" %>
      </div>
      <div class="form-group">
        <%= f.label :notes %>
        <%= f.text_area :notes, class: 'form-control', rows: 4, placeholder: "Describe your task" %>
      </div>
      <div class="form-group">
        <%= f.label :expected_end_date %>
        <%= f.text_field :expected_end_date, class: 'form-control', placeholder: "yyyy/mm/dd" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
  </div>
</div>
